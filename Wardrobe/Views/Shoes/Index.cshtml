@model IEnumerable<Wardrobe.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2>Shoe Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShoeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoePhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeSeason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeOccasion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeName)
        </td>
        <td>
            <a href="@Url.Action("Details", new { id = item.ShoeID })">  <img src="@Html.DisplayFor(modelItem => item.ShoePhoto)" style="width: 150px; height: 150px;" /> </a>
</td>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeSeason)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeOccasion)
        </td>
        <td>
          
            @Html.ActionLink("Delete", "Delete", new { id=item.ShoeID })
        </td>
    </tr>
}

</table>
